        <div class="Yourdad">
        <label>Name</label>
        <input type ="text" name ="Adult"> <br>
        
        <label>Relationship</label>
        <input type ="text" name ="relationship"> <br>

        <label>City & State</label>
        <input type ="text" name="Parentadd"> <br>

        <label>Street</label>
        <input type="text" name="sts"><br>

        <label>Zip Code</label>
        <input type="text" name="zips"> <br>

        <label>Phone</label>
        <input type ="text" name ="phone"> <br>

        <label> Email</label>
        <input type ="email" name ="email"> <br>
        
        <label>Place of Employment</label>
        <input type ="text" name="poe"> <br>

        <label>Important Notes</label>
        <textarea name="notes" rows="2" cols="35"></textarea>
  <br><br>
    </div>
    <div class="button">
        <button>Submit</button>
    </div>
        
    </form>
</div>
