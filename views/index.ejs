        <label>Street</label>
        <input type="text" name="st"><br>

        <label>Zip Code</label>
        <input type="text" name="zip"> <br>

        <label>Grade</label>
        <input type="text" name="grade"> <br><br>

        <label for="school">School:</label>
        <select id="school" name="school">
            <option value=""></option>
            <option value="Viva Verde High School">Viva Verde High School</option>
            <option value="Cactus Canyon High School">Cactus Canyon High School</option>
            <option value="Aquinas High School">Aquinas High School</option>
